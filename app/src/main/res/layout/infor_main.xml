<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/panelfaculty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/cardview_default_radius">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/facultylogo"
            android:layout_width="150dp"
            android:layout_height="101dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_baseline_image_24" />

        <TextView
            android:id="@+id/facultyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:padding="5sp"
            android:text="FACULTAD DE CIENCIAS DE LA INGENIERÍA"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/facultyDecano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="9sp"
            android:text="Decano: Chiriboga Casanova Washington"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/facultyemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:padding="3dip"
            android:text="fcip@uteq.edu.ec"
            android:textAlignment="center"
            android:textColor="#2196F3"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/facultyLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="5dp"
            android:text="Campus 'Ingeniero Manuel Agustín Haz Álvarez', Av. Quito km. 1 1/2 vía a Santo Domingo de los Tsáchilas"
            android:textAlignment="center"
            android:textSize="10sp" />


    </LinearLayout>
</LinearLayout>